      <StackPane fx:id="notificationPane" layoutX="684.0" layoutY="65.0" prefHeight="33.0" prefWidth="200" style="-fx-background-color: lightblue;">
         <!-- Vos éléments de notification peuvent être ajoutés ici -->
         <children>
            <Label fx:id="notificationLabel" textFill="#000000" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
