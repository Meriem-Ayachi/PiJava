<AnchorPane prefHeight="680.0" prefWidth="900.0" style="-fx-background-image: url('background.jpg'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterOffre">
   <children>
      <TextField fx:id="titleTFO" layoutX="82.0" layoutY="48.0" prefHeight="45.0" prefWidth="190.0" promptText="title" styleClass="modern-textfield" stylesheets="@textfield.css" />
      <TextField fx:id="descriptionTFO" layoutX="82.0" layoutY="114.0" prefHeight="45.0" prefWidth="190.0" promptText="description" styleClass="modern-textfield" stylesheets="@textfield.css" />
      <TextField fx:id="prixTFO" layoutX="82.0" layoutY="254.0" prefHeight="45.0" prefWidth="190.0" promptText="prix" styleClass="modern-textfield" stylesheets="@textfield.css" />
      <TextField fx:id="lieuTFO" layoutX="79.0" layoutY="324.0" prefHeight="45.0" prefWidth="190.0" promptText="lieu" styleClass="modern-textfield" stylesheets="@textfield.css" />
      <Button layoutX="312.0" layoutY="455.0" mnemonicParsing="false" onAction="#choisirImage" prefHeight="45.0" prefWidth="138.0" styleClass="modern-button" stylesheets="@modern-button.css" text="Choisir Image" />
      <ImageView fx:id="imageIV" fitHeight="150.0" fitWidth="190.0" layoutX="79.0" layoutY="402.0" />
      <Button layoutX="119.0" layoutY="601.0" mnemonicParsing="false" onAction="#AjouterO" prefHeight="45.0" prefWidth="99.0" styleClass="modern-button" stylesheets="@modern-button.css" text="Ajouter" />
