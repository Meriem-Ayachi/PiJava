<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.DetailedPageforuserController">

    <!-- Big title in blue color -->
    <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #0000FF;" text="Flight Details">
      <font>
         <Font name="Inconsolata Condensed Bold" size="28.0" />
      </font></Label>

    <!-- Labels for flight information -->
    <Label fx:id="IdLabel" style="-fx-font-weight: bold;" text="Destination:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>

    <Label fx:id="destinationLabel" style="-fx-font-weight: bold;" text="Destination:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="priceLabel" style="-fx-font-weight: bold;" text="Price:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="departureLabel" style="-fx-font-weight: bold;" text="Departure Date:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="arrivalLabel" style="-fx-font-weight: bold;" text="Arrival Date:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="durationLabel" style="-fx-font-weight: bold;" text="Duration:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="classLabel" style="-fx-font-weight: bold;" text="Class:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="pointDepartLabel" style="-fx-font-weight: bold;" text="Departure Point:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="nbRescaleLabel" style="-fx-font-weight: bold;" text="Number of Rescales:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
    <Label fx:id="nbPlaceLabel" style="-fx-font-weight: bold;" text="Number of Places:">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Label>
   <Button mnemonicParsing="false" onAction="#reserverVol" styleClass="modern-button" stylesheets="@modern-button.css" text="Reserver">
      <font>
         <Font name="Inconsolata Regular" size="18.0" />
      </font></Button>





</VBox>
