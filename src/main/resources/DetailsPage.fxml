<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #CFD6EE;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailsPage">
   <children>
      <ImageView fx:id="imageView" fitHeight="117.0" fitWidth="258.0" layoutX="171.0" layoutY="14.0" />
      <Button fx:id="reserver" layoutX="60.0" layoutY="316.0" mnemonicParsing="false" onAction="#Reserver" prefHeight="36.0" prefWidth="108.0" text="Reserver" />
      <Button fx:id="commenter" layoutX="437.0" layoutY="316.0" mnemonicParsing="false" onAction="#Commenter" prefHeight="36.0" prefWidth="108.0" text="Commentaire" />
      <GridPane fx:id="gridpane" layoutX="76.0" layoutY="129.0" prefHeight="127.0" prefWidth="381.0" AnchorPane.topAnchor="150.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="206.0" minWidth="10.0" prefWidth="190.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="209.0" minWidth="10.0" prefWidth="191.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="84.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="48.0" minHeight="0.0" prefHeight="48.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>

       <HBox fx:id="ratingBox" layoutX="472.0" layoutY="14.0" prefHeight="25.0" prefWidth="120.0">
           <children>
               <Button onAction="#rateOneStar" text="★" />
               <Button onAction="#rateTwoStars" text="★★" />
               <Button onAction="#rateThreeStars" text="★★★" />
               <!-- Ajoutez plus de boutons pour plus d'options de notation -->
           </children>
       </HBox>
       <Label fx:id="averageRatingLabel" layoutX="473.0" layoutY="48.0" text="Moyenne de notation:" />
   </children>
</AnchorPane>
