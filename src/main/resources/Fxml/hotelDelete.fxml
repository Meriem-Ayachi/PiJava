<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.hotelDelete">

    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Supprimer un hôtel" />

        <Label text="ID de l'hôtel à supprimer:" />

        <TextField fx:id="hotelIdField" onAction="#deleteHotel" promptText="ID de l'hôtel" />

        <Button onAction="#deleteHotel" text="Supprimer" />
    </VBox>
</AnchorPane>
