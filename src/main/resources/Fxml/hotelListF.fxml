        </Pane>




        <Circle fx:id="chatbotCircle" fill="#18593b" layoutX="553.0" layoutY="492.0" radius="35.0" />
        <!-- Insérer votre gif ici -->
        <ImageView fx:id="firstGifImageView" fitHeight="122.0" fitWidth="118.0" layoutX="482.0" layoutY="407.0" onMouseClicked="#showChatBubble">
            <image>
                <Image url="@chatbot1.gif" />
            </image>
        </ImageView>
