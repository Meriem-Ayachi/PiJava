                <Image url="@chatbot2.gif" />
            </image>
        </ImageView>
        <Label fx:id="floatingMessage" layoutX="494.0" layoutY="373.0" style="-fx-background-color: #18593b; -fx-text-fill: white; -fx-padding: 15px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-font-size: 16px;" text="Besoin d'aide ?" visible="false">
        </Label>
    </children>
</AnchorPane>
