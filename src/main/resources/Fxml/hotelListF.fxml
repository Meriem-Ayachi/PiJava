        <Button fx:id="triEtoilesButton" layoutX="455.0" layoutY="48.0" onAction="#trierParEtoiles" styleClass="modern-button" stylesheets="@../modern-button.css" text="Trier par étoiles" />

        <Label fx:id="nomid" layoutX="19.0" layoutY="57.0" />
        <Label fx:id="nbretoilesid" layoutX="19.0" layoutY="91.0" />
        <Label fx:id="emplacementid" layoutX="19.0" layoutY="130.0" />

        <Label fx:id="avisid" layoutX="14.0" layoutY="218.0" prefHeight="18.0" prefWidth="78.0" />

        <Label layoutX="241.0" layoutY="3.0" text="list hôtel" textFill="#326f40">
            <font>
                <Font name="Sitka Text Italic" size="18.0" />
            </font>
        </Label>
        <ListView fx:id="hotelListView" layoutX="6.0" layoutY="75.0" prefHeight="352.0" prefWidth="588.0" style="-fx-background-color: transparent;" />
