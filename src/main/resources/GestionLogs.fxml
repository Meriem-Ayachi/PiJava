<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="463.0" prefWidth="825.0" stylesheets="@backuser.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionLogs">
    <fx:include source="sidebarAdmin.fxml" />
    <AnchorPane layoutX="270.0" prefHeight="680.0" prefWidth="624.0" style="-fx-background-color: #ececec;">
        <children>
            <Label layoutX="62.0" layoutY="6.0" text="Listes des journaux">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>

            <ScrollPane layoutX="15.0" layoutY="106.0" prefHeight="571.0" prefWidth="608.0">
                <content>
                    <TableView fx:id="logsTableView" onMouseClicked="#onTableRowClicked" prefHeight="568.0" prefWidth="603.0">
                    </TableView>
                </content>
            </ScrollPane>

            <Button layoutX="491.0" layoutY="11.0" onAction="#supprimerSelectedLog" prefHeight="16.0" prefWidth="132.0" style="-fx-background-color: #F95730;" styleClass="modern-button" stylesheets="@modern-button.css" text="Supprimer" />
            <TextField fx:id="nomTF" layoutX="62.0" layoutY="61.0" onKeyPressed="#nomChanged" prefHeight="24.0" prefWidth="150.0" promptText="Nom" styleClass="modern-textfield" stylesheets="@textfield.css" />
            <TextField fx:id="prenomTF" layoutX="234.0" layoutY="61.0" onKeyPressed="#prenomChanged" prefHeight="24.0" prefWidth="141.0" promptText="Prenom" styleClass="modern-textfield" stylesheets="@textfield.css" />
            <ComboBox fx:id="logTypeComboBox" layoutX="416.0" layoutY="61.0" onAction="#logTypeChanged" prefWidth="150.0" styleClass="modern-combobox" stylesheets="@ComboBox.css" />
        </children>
    </AnchorPane>
</AnchorPane>
